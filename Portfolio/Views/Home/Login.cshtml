@using (@Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "frmlogin", name = "frmlogin", @class = "form-horizontal", role = "form" }))
{

    <legend>Credenciais</legend>

    <div class="form-group">

        <label class="control-label col-md-2">Login</label>
        <div class="col-md-10">
            @Html.TextBox("login", null, new { @id = "login", name = "login", @class = "form-control" })
        </div>

    </div>

    <div class="form-group">

        <label class="control-label col-md-2">Senha</label>
        <div class="col-md-10">
            @Html.TextBox("senha", null, new { @id = "senha", name = "senha", @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2">
            <input type="submit" class="btn btn-info btn-lg" value="Entrar" />
        </div>
    </div>


    <br />
    <div class="row">
        <div class="col-md-offset-6" id="loading" style="display: none;">
            <i class="fa fa-spinner fa-pulse fa-2x"></i>
        </div>
    </div>
}
<script>
    function sucesso(data) {
        alert(data.mensagem);
    };

    function falha(data) {
        alert(data.mensagem);
    };
</script>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
